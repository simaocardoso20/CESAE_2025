<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonOla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Converter"
        app:layout_constraintEnd_toEndOf="@+id/et_valor_euros"
        app:layout_constraintStart_toStartOf="@+id/et_valor_euros"
        app:layout_constraintTop_toBottomOf="@+id/et_valor_euros" />

    <EditText
        android:id="@+id/et_valor_euros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="134dp"
        android:ems="10"
        android:hint="Inserir â‚¬"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/num_resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_resultado"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginBottom="328dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_valor_euros" />
</androidx.constraintlayout.widget.ConstraintLayout>